  <header>
    <h1>Eat-A-Burger!!(kind of)</h1>
  </header>
  <div class="container">
    <div class="row">
      <div class="col-sm-6">

        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-button">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      <div class="col-sm-6">
        <p>Placeholder for Burger Eaten</p>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div>
          <form action="">
            <div class="form-group">
              <label for="exampleInputBurger">Enter Burger Name Here!</label>
              <input type="burger" class="form-control">
            </div>
            <button type="submit" class="burgerNotEaten">Submit</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</body>
</html>

